{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES5",
    "module": "ESNext",
    "lib": ["es2016", "dom"],
    "outDir": "./dist/",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "paths": {
      "*": ["src/*", "node_modules/*"]
    },
    "resolveJsonModule": true
  },
  "exclude": ["examples"]
}
